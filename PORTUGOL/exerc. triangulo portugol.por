programa {
  funcao inicio() {
    ///area do triangulo
    inteiro base,altura,resultado
    real base,altura,resultado

    escreva("\n bom dia!! ")
    escreva("\n bem vindo a calculadora ")
    escreva("\n vamos calcular a area do triangulo ")
    escreva("\n digite o valor da base do triangulo: ")
    leia(base)
    escreva("digite o valor da altura do triangulo: ")
    leia(altura)
    resultado = (base * altura) / 2 

    escreva("o resultado é: ",resultado)


  }
}
